---
import BaseLayout from '../../layouts/BaseLayout.astro';
const pageTitle = "Tag Index"

const allPosts = await Astro.glob('../posts/*.md');
const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())].filter(String);

const uniqueTagsFiltered = uniqueTags.filter(tag => tag != undefined )

console.log("uniqueTags", uniqueTagsFiltered)


---

<BaseLayout pageTitle={pageTitle}>   
  <ul>
    {uniqueTagsFiltered.map((tag) => <li>{tag}</li>) }
  </ul>
</BaseLayout>
