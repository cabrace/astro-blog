---
import BaseLayout from '../../layouts/BaseLayout.astro';
const pageTitle = "Tag Index"

const allPosts = await Astro.glob('../posts/*.md');
const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())].filter(String);

const uniqueTagsFiltered = uniqueTags.filter(tag => tag != undefined )

console.log("uniqueTags", uniqueTagsFiltered)


---

<BaseLayout pageTitle={pageTitle}>   
    {uniqueTagsFiltered.map((tag) => <p class="tag"><a href={tag}>{tag}</a></p>) }
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>
